<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:id="@+id/dialogtambahan"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailtambahan"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="8dp" />

        <!-- Baris Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/card_tambahan_id"/>

            <TextView
                android:id="@+id/tvDIALOG_TAMBAHAN_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P001284"
                android:textStyle="bold" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#DDD" />
        <!-- Tambah baris lain seperti di atas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/card_tambahan_nama"/>

            <TextView
                android:id="@+id/tvDIALOG_TAMBAHAN_NAMA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rinso"
                android:textStyle="bold"
                android:textColor="#1976D2" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#DDD" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/harga"/>

            <TextView
                android:id="@+id/tvDIALOG_HARGA_TAMBAHAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 15.000"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Tombol Aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btDIALOG_MOD_TAMBAHAN_Edit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sunting"
                android:backgroundTint="#1976D2"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btDIALOG_MOD_TAMBAHAN_Hapus"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hapus"
                android:backgroundTint="#D32F2F"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>